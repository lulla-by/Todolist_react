import { useState } from "react";
import "./App.css";

function App() {
  const [title, setTitle] = useState("");
  const [body, setBody] = useState("");
  const [todos, setTodos] = useState([
    {
      id: 1,
      title: "ë¦¬ì•¡íŠ¸ê³µë¶€í•˜ê¸°",
      body: "ë¦¬ì•¡íŠ¸ ê¸°ì´ˆë¥¼ ê³µë¶€í•´ë´…ì‹œë‹¤",
      isdone: false
    },
  ]);

  return (
    <div className="container">
      <div className="top">
        <p className="todoList">My Todo List</p> 
        <p className="react">React</p>
      </div>
      <div className="input">
        ì œëª© <input
          type="text"
          value={title}
          onChange={(event) => {
            setTitle(event.target.value);
          }}
        />
        ë‚´ìš© <input
          type="text"
          value={body}
          onChange={(event) => {
            setBody(event.target.value);
          }}
        />
        <button
          onClick={() => {
            setTodos([...todos, { id: todos.length + 1, title: title, body: body, isdone: false }]);
          }}
        >
          ì¶”ê°€í•˜ê¸°
        </button></div>

      <div>

        <h1>Working...ğŸ”¥</h1>
        <div className="todos-container">
          {
            todos.map(function (todo, i) {
              if (todo.isdone == false) {
                return <div className="todo" key={todo.id}>
                  <h2>{todo.title}</h2>
                  <p>{todo.body}</p>

                  <button className="btn" onClick={() => {
                    let copy = [...todos]
                    copy.splice(i, 1)
                    setTodos(copy);
                  }}>ì‚­ì œí•˜ê¸°</button>
                  <button className="btn" onClick={() => {
                    let copy = [...todos]
                    copy[i].isdone = true
                    setTodos(copy);
                  }}>í™•ì¸</button>

                </div>
              }
            }

            )
          }
        </div>
      </div>

      <div>
        <h1>Done...ğŸ‰</h1>
        <div className="todos-container">
          {
            todos.map(function (todo, i) {
              if (todo.isdone == true) {
                return <div className="todo" key={todo.id}>
                  <h2>{todo.title}</h2>
                  <p>{todo.body}</p>

                  <button className="btn" onClick={() => {
                    let copy = [...todos]
                    copy.splice(i, 1)
                    setTodos(copy);
                  }}>ì‚­ì œí•˜ê¸°</button>

                  <button className="btn" onClick={() => {
                    let copy = [...todos]
                    copy[i].isdone = false
                    setTodos(copy);
                  }}>ì·¨ì†Œ</button>
                </div>
              }
            }

            )

          }
        </div>
      </div>


    </div>
  );
}
export default App;